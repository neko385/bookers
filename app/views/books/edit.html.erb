<h1>Editing Book</h1>
<p id="notice">
  <% if flash[:alert] %>
    <%= flash[:alert] %>
  <% end %>
</p>

</p>
<% if @book.errors.any? %>
<div id="error_explanation">
  <h2><%= @book.errors.count %>erroes prohibited this book form being savedï¼š</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with model: @book, url: book_path(@book.id),method: :patch do |f| %>
<div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
</div>

<div class="field">
  <label for=book_body>Body</label>
<%= f.text_area :body %>
</div>

<div class="actions">
  <%= f.submit "Update Book" %>
</div>

<span>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", "/books" %>
</span>
<% end %>